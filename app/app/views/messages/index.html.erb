<p id="notice"><%= notice %></p>
<div class="jumbotron text-center">
<h1>Listing Messages</h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.name %></td>
        <td><%= message.email %></td>
        <td><%= message.body %></td>
         <td><%= link_to 'Show', message, class: 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_message_path(message), class:'btn btn-primary white' %></td>
        <td><%= link_to 'Destroy', message, class:'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Message', new_message_path, class:'btn btn-success' %>
